<Window x:Class="View.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Menu" Height="600" Width="800">
    <Grid>
        <ListView x:Name="Main_List_View"  ItemsSource="{Binding MainLegalAreas}" HorizontalAlignment="Left" Height="455" Margin="156,52,0,0" VerticalAlignment="Top" Width="191">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Button Content="{Binding Title}" Tag="{Binding Id}" Click="ButtonBase_OnClick">
                    </Button>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <ListView x:Name="Sub_List_View" ItemsSource="{Binding SubLegalAreas}" HorizontalAlignment="Left" Height="455" Margin="347,52,0,0" VerticalAlignment="Top" Width="191">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Button Content="{Binding Title, UpdateSourceTrigger=PropertyChanged}" Tag="{Binding Id}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Name="test_btton"  Content="Tilbage" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="80" Click="Back_Button_Click"/>
        <ListView x:Name="Paragraph_View" ItemsSource="{Binding Paragraph}" HorizontalAlignment="Left" Height="455" Margin="538,52,0,0" VerticalAlignment="Top" Width="191" SelectionChanged="Paragraph_View_SelectionChanged">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Button Content="{Binding Title, UpdateSourceTrigger=PropertyChanged}" Tag="{Binding Id}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>
