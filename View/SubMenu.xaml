<Window x:Class="View.SubMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="SubMenu" Height="450" Width="800">
    <Grid>
        <ListView x:Name="SubListView" ItemsSource="{Binding SubLegalAreas}" HorizontalAlignment="Left" Height="320" Margin="120,46,0,0" VerticalAlignment="Top" Width="128">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Button Content="{Binding Title}" Tag="{Binding Tag}" Click="ButtonBaseOpenParagraph"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Content="Button" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="BackToMenu"/>

    </Grid>
</Window>
